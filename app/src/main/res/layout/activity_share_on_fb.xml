<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.mkdingo.goran.signlangugage.shareOnFBActivity">

    <FrameLayout
        android:background="@drawable/forma2"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/textSoIme"
            android:gravity="center"
            android:textColor="@color/portokalova"
            android:textSize="50sp"
            android:layout_width="wrap_content"
            android:layout_gravity="center|top"
            android:layout_height="100dp" />

        <VideoView
            android:id="@+id/slideshow"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:scaleType="fitCenter"
            android:textColor="@color/White" />

    </FrameLayout>



    <TextView
        android:id="@+id/share_on_fb"
        android:text="SHARE ON"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/portokalova"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="40dp"/>

    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/facebook_icon"
        android:layout_toRightOf="@id/share_on_fb"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:id="@+id/share_on_tw"
        android:text="SHARE ON"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/portokalova"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/facebook"/>

    <ImageButton
        android:id="@+id/twiter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/twitter_icon"
        android:layout_toRightOf="@id/share_on_tw"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"/>



</RelativeLayout>
