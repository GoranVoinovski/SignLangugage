<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mkdingo.goran.signlangugage.shareOnFBActivity">

    <FrameLayout
        android:background="@color/LightSalmon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="160dp"
            android:textSize="50dp"
            android:id="@+id/textSoIme"
            android:textColor="@color/White"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <ImageView
            android:id="@+id/slideshow"
            android:textColor="@color/White"
            android:layout_marginTop="100dp"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:scaleType="fitCenter"
            android:layout_height="200dp" />



    </FrameLayout>





    <TextView
        android:id="@+id/share_on_fb"
        android:text="SHARE ON"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="40dp"/>

    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/facebook_icon"
        android:layout_toRightOf="@id/share_on_fb"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="450dp"/>
    <TextView
        android:id="@+id/share_on_tw"
        android:text="SHARE ON"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@id/facebook"/>

    <ImageButton
        android:id="@+id/twiter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/twitter_icon"
        android:layout_toRightOf="@id/share_on_tw"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="450dp"/>



</RelativeLayout>
