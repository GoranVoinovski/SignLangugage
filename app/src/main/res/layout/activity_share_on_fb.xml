<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mkdingo.goran.signlangugage.shareOnFBActivity">

    <ImageView
        android:id="@+id/slideshow"
        android:textColor="@color/White"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/LightSalmon"/>

    <TextView
        android:id="@+id/textSoIme"
        android:textColor="@color/White"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/share_on_fb"
        android:text="SHARE ON"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="40dp"/>

    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/facebook_icon"
        android:layout_toRightOf="@id/share_on_fb"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="500dp"/>
    <TextView
        android:id="@+id/share_on_tw"
        android:text="SHARE ON"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@id/facebook"/>

    <ImageButton
        android:id="@+id/twiter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/twitter_icon"
        android:layout_toRightOf="@id/share_on_tw"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="500dp"/>



</RelativeLayout>
