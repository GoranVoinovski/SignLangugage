<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pozadina4"
    tools:context="com.mkdingo.goran.signlangugage.Najava">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="130dp"
       android:fontFamily="@font/macswiss"
        android:text="@string/what_is_your_name"
        android:textColor="@color/Beige"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edtname"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:inputType="textCapCharacters"
        android:digits="АБВГДЃЕЖЗЅИЈКЛЉМНЊОПРСТЌУФХЦЧЏШ"
        android:maxLength="15"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/forma1"
        android:fontFamily="@font/macbahamas"
        android:gravity="center"
        android:hint="@string/enter_your_name"
        android:textSize="23sp" />

    <TextView
        android:text="Користете тастатура со Македонска поддршка"
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@id/edtname"
        android:layout_marginLeft="50dp"
        android:textSize="12sp"
        android:textColor="@color/Bisque"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/save"
        android:layout_width="170dp"
        android:layout_centerHorizontal="true"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/forma2"
        android:textSize="12sp"
        android:fontFamily="@font/macswissbold"
        android:text="@string/save"
        android:textColor="@color/PopsledenTemnaCrna" />


</RelativeLayout>
